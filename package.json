{
  "name": "yt-play-sync",
  "version": "1.0.1",
  "description": "Software for downloading fast music from YouTube playlists with synchronization.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "author": "Yohemm",
  "license": "MIT",
  "devDependencies": {
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.yohemm.ytplaysync",
    "productName": "YTPlaySync",
    "files": [
      "main.js",
      "utils/**",
      "systemeFunction.js",
      "renderer/**",
      "preload.js"
    ],
    "extraResources": [
      {
        "from": "dependances/",
        "to": "dependances",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "renderer/src/logo.ico"
    }
  }
}